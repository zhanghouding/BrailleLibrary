<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    >
    <FrameLayout
        android:id="@+id/library_rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" 
        >
        <RelativeLayout
            android:layout_width="match_parent"
        	android:layout_height="wrap_content"
            >  
			<TextView
		        android:id="@+id/library_main_title"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_alignParentTop="true"
		        android:gravity="center"
		        android:text="@string/library_main_title" 
		        android:textSize="@dimen/library_file_text_size"
		        android:background="@color/transparent"
		        android:includeFontPadding="false"
		        android:ellipsize="end"
		        android:singleLine="true"
		        />      
        </RelativeLayout>
        <View
            android:id="@+id/library_line"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_gravity="bottom"
            android:background="@android:color/black" />
    </FrameLayout> 
	<ImageButton
	    android:id="@+id/library_ib_status"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerInParent="true"
	    android:background="@drawable/play" 
	    android:clickable="false"
	    />
	<LinearLayout 
	    android:id="@+id/library_seek_bar_layout" 
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:layout_alignParentBottom="true" 
	    android:gravity="center" 
	    android:orientation="vertical"
	    >
		<RelativeLayout 
		    android:layout_width="match_parent" 
		    android:layout_height="wrap_content" 
		    android:orientation="horizontal"
		    >
			<TextView 
			    android:id="@+id/library_starttime" 
			    android:layout_width="wrap_content" 
			    android:layout_height="wrap_content" 
			    android:layout_alignParentLeft="true" 
			    android:text="00:00" 
				android:textSize="@dimen/library_file_text_size"
				android:background="@color/transparent"
			    /> 
			<TextView 
			    android:id="@+id/library_totaltime" 
			    android:layout_width="wrap_content" 
			    android:layout_height="wrap_content" 
			    android:layout_alignParentRight="true" 
			    android:text="00:00" 
				android:textSize="@dimen/library_file_text_size"
				android:background="@color/transparent"
			    /> 
		</RelativeLayout>
		<SeekBar 
		    android:id="@+id/library_seek_bar" 
		    android:layout_width="match_parent" 
		    android:layout_height="wrap_content" 
		    android:focusable="false" 
		    android:orientation="horizontal" 
		    android:max="10000"
		    /> 
	</LinearLayout>
	<TextView
		android:id="@+id/library_num"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/library_rl_title"
		android:text="" 
		android:textSize="@dimen/library_file_text_size"
		android:background="@color/transparent"
		android:includeFontPadding="false"
		android:singleLine="true"
		/> 
</RelativeLayout>
